@rendermode InteractiveServer
@inject NavigationManager navigate

<div class="card-form" type="button" @onclick="async () => await ViewInfo(professorInfo.Id!)">
    <div class="professor-avatar"></div>
    <div class="description">
        <div class="div">@professorInfo!.Name</div>
        <div class="institution">
            <div class="div2">Учебное заведение:</div>
            <div class="div3">@professorInfo.EducationalInstitution</div>
        </div>
        <div class="degree">
            <div class="div2">Ученая степень:</div>
            <div class="div3">@professorInfo.AcademicDegree</div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ProfessorInfo? professorInfo { get; set; }

    async Task ViewInfo(string Id)
    {
        await Task.Run(() => navigate.NavigateTo($"/voting/category/teacher/{Id}"));
    }
}